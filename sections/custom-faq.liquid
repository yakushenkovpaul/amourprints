<div class="page-width">
<div class="faq_toggle_section">
    <h2>{{ section.settings.title }} </h2>
        <div class="acc">
    {%- for block in section.blocks -%}
  <div class="acc__card">
      <div class="acc__title">{{ block.settings.title }}</div>
      <div class="acc__panel">
       {{ block.settings.text }}
      </div>
    </div>
  {%- endfor -%}
</div>
  </div> 
</div>



<style>
.acc {
  margin: 0 auto;
  max-width: 800px;
}
.acc__card {
    position: relative;
    background: #f7f7f7;
    margin-bottom: 4px;
    border-radius: 8px;
}

@import url("https://fonts.googleapis.com/css?family=Lato:300,400|PT+Sans:400,700");


.acc__title {
  background: #f9f9f9;
  color: #212121;
  cursor: pointer;
  display: block;
  padding: 1em 1.5em;
  position: relative;
  text-align: left;
}
.acc__title::after {
  width: 8px;
  height: 8px;
  border-right: 1px solid #4a6e78;
  border-bottom: 1px solid #4a6e78;
  position: absolute;
  right: 10px;
  content: " ";
  top: 17px;
  transform: rotate(-45deg);
  transition: all 0.2s ease-in-out;
}
.acc__title.active::after {
  transform: rotate(45deg);
  transition: all 0.2s ease-in-out;
}

.acc__panel {
    display: none;
    margin: 0;
    padding: 1em 1em 2em;
    text-align: left;
    background: #fafafafc;
}
  .faq_toggle_section h2 {
    margin-bottom: 10px;
    margin-top: -8px;
    font-size: 22px;
    font-weight: 600;
}

</style>



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>


<script type="text/javascript">
jQuery(function() {
  jQuery('.acc__title').click(function(j) {
    
    var dropDown = jQuery(this).closest('.acc__card').find('.acc__panel');
    jQuery(this).closest('.acc').find('.acc__panel').not(dropDown).slideUp();
    
    if (jQuery(this).hasClass('active')) {
      jQuery(this).removeClass('active');
    } else {
      jQuery(this).closest('.acc').find('.acc__title.active').removeClass('active');
      jQuery(this).addClass('active');
    }
    
    dropDown.stop(false, true).slideToggle();
    j.preventDefault();
  });
});
</script>

