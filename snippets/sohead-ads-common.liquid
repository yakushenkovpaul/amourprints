<script src="https://pixel-api.socialhead.io/pixel/socialpixel.min.js" defer></script>


<input type="hidden" id="social-ads-product-price" value="{{product.price}}">
<input type="hidden" id="social-ads-product-id" value="{{product.id}}">
<input type="hidden" id="social-ads-product-content-name" value="{{product.title}}">

<input type="hidden" id="social-ads-product-content-variant-ids" value="{% for variant in product.variants %}{{ variant.id }},{% endfor %}">
<input type="hidden" id="social-ads-product-content-collection-ids" value="{% for collection in product.collections %}{{ collection.id }},{% endfor %}">
<input type="hidden" id="social-ads-product-content-tags" value="{% for tag in product.tags %}{{ tag }},{% endfor %}">
